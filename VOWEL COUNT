String = str(input("Please type a sentence: "))
a = "a"
A = "A"
e = "e"
E = "E"
i = "i"
I = "I"
o = "o"
O = "O"
u = "u"
U = "U"
acount = 0
ecount = 0
icount = 0
ocount = 0
ucount = 0

if A or a in String :
     acount = acount + 1

if E or e in String :
     ecount = ecount + 1

if I or i in String :
    icount = icount + 1

if o or O in String :
     ocount = ocount + 1

if u or U in String :
     ucount = ucount + 1

vcount = acount + ecount + icount + ocount + ucount

print("AMOUNT OF VOWELS IN SENTENCE:",vcount ,"NUMBER OF As" ,acount ,"NUMBER OF Es", e
